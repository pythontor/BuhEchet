<Window x:Class="PracticalWork4.AddNewRecordType_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticalWork4"
        mc:Ignorable="d"
        Title="Добавить новый тип записи" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Text="Введите тип добавляемой записи"
            FontSize="14"
            TextAlignment="Center"
            Height="20"
            VerticalAlignment="Center"
            Margin="15,0,15,0"/>

        <TextBox x:Name="NewRecordType_TextBox"
            Grid.Row="1"
            FontSize="14"
            TextAlignment="Center"
            Height="20"
            VerticalAlignment="Center"
            Margin="30,0,30,0"/>

        <Button
            x:Name="SaveNewRecordType_Button"
            Click="SaveNewRecordType_Button_Click"
            Content="Сохранить"
            Grid.Row="2"
            FontSize="14"
            Height="25"
            VerticalAlignment="Center"
            Margin="120,0,120,0"/>
    </Grid>
</Window>
